<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="Flappy"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hunter.flappy.MainActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="184dp">

        <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/frame_1"
        android:id="@+id/imageView"
            android:layout_marginBottom="188dp"
        android:layout_height="200dp"
            android:contentDescription="" />


        <!-- <com.example.hunter.flappy.MainView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </com.example.hunter.flappy.MainView> -->


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"></LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="74dp"
        android:weightSum="1">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:src="@drawable/playbtnselector"
            android:id="@+id/playButton"
            android:scaleType="fitCenter"
            android:layout_marginBottom="177dp"
            android:layout_gravity=""
            android:background="@null" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:weightSum="1">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:src="@drawable/settingsbtnselector"
            android:id="@+id/imageButton"
            android:scaleType="fitCenter"
            android:background="@null" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="61dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:src="@drawable/scorebtnselector"
            android:id="@+id/imageButton3"
            android:scaleType="fitCenter"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:weightSum="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:src="@drawable/creditsbtnselector"
            android:id="@+id/creditButton"
            android:scaleType="fitCenter"
            android:background="@null" />
    </LinearLayout>

</LinearLayout>
